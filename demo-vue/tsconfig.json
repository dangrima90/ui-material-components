{
    "extends": "../tsconfig",
    "compilerOptions": {
        "module": "esnext",
        "target": "es2017",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": false,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "lib": [
            "es6",
            "dom",
            "es2015.iterable"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "app/*"
            ]
        },
        "plugins": [
        ]
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "../src/**/*.d.ts",
        "node_modules",
        "platforms"
    ]
}